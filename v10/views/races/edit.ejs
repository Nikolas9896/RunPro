<% include ../partials/header %>

    <h1 class="text-center my-3">Edit <%= race.name%></h1>
    <div class="d-flex justify-content-center"> 
    <form action="/races/<%= race._id %>/edit?_method=PUT" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input id="name" class="form-control"name="name" type="text" value="<%= race.name %>" placeholder="Name">
                <small id="name" class="form-text text-muted">Please Enter name of the race</small>
            </div>
            <div class="form-group">
                <label for="image">Race image</label>
                <input id="image" class="form-control" name="image" type="text" value="<%= race.image %>" placeholder="Image url">
                <small id="name" class="form-text text-muted">Please Enter image url</small>
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <input id="description" class="form-control" name="description" type="text" value="<%= race.description %>" placeholder="text">
                <small id="description" class="form-text text-muted">Please write short description</small>
            </div>
            <div class="form-group">
            <button type="submit" class="btn btn-primary">Add New Race</button>
            </div>
        </form>
    </div>
    
    <a href="/">back to landing!</a>

     <% include ../partials/footer %>