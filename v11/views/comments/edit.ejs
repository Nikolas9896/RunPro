<% include ../partials/header %>

    <h1 class="text-center my-3">Edit Comment</h1>
    <div class="d-flex justify-content-center"> 
    <form action="/races/<%= race_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="text">Text comment</label>
                <input id="text" value="<%= comment.text %>" class="form-control"name="comment[text]" type="text">
                <small id="text" class="form-text text-muted">Please! Change your comment</small>
            </div>
            <div class="form-group">
            <button type="submit" class="btn btn-primary">Add New Comment</button>
            </div>
        </form>
    </div>
    
    <a href="/">back to landing!</a>

